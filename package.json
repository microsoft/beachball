{
  "name": "beachball",
  "version": "2.62.0",
  "description": "The Sunniest Semantic Version Bumper",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/beachball"
  },
  "homepage": "https://microsoft.github.io/beachball/",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "./bin/beachball.js",
  "engines": {
    "node": ">=20.17.0"
  },
  "files": [
    "bin",
    "lib/!(__*)",
    "lib/!(__*)/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w --preserveWatchOutput",
    "bump": "node ./lib/cli.js bump",
    "change": "node ./lib/cli.js change",
    "checkchange": "node ./lib/cli.js check",
    "docs": "vuepress dev docs --host localhost",
    "docs:build": "yarn docs:typecheck && vuepress build docs",
    "docs:typecheck": "tsc -p docs/tsconfig.json",
    "format": "prettier --write '**/*'",
    "prepare": "husky",
    "lint": "yarn lint:deps && yarn lint:code",
    "lint:code": "eslint --color --max-warnings=0 src && echo 'eslint succeeded'",
    "lint:deps": "depcheck .",
    "pub": "node ./lib/cli.js publish",
    "release": "node ./lib/cli.js publish -y",
    "release:docs": "yarn docs:build && yarn gh-pages -d docs/.vuepress/dist --dotfiles",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:all": "yarn test:unit && yarn test:func && yarn test:e2e",
    "test:e2e": "yarn test --selectProjects e2e",
    "test:func": "yarn test --selectProjects functional",
    "test:unit": "yarn test --selectProjects unit",
    "test:watch": "yarn test --watch",
    "test:vscode": "jest",
    "update-snapshots": "yarn test:unit -u && yarn test:func -u && yarn test:e2e -u"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "cosmiconfig": "^9.0.0",
    "minimatch": "^3.0.4",
    "nano-spawn": "^2.0.0",
    "npm-registry-fetch": "^14.0.0",
    "p-graph": "^1.1.2",
    "p-limit": "^3.0.2",
    "prompts": "^2.4.2",
    "semver": "^7.0.0",
    "toposort": "^2.0.2",
    "workspace-tools": "^0.40.2",
    "yargs-parser": "^21.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.0.0",
    "@jest/globals": "^30.0.0",
    "@phenomnomnominal/tsquery": "^6.1.3",
    "@types/minimatch": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/npm-registry-fetch": "^8.0.9",
    "@types/prompts": "^2.4.2",
    "@types/semver": "^7.3.13",
    "@types/tmp": "^0.2.3",
    "@types/toposort": "^2.0.3",
    "@types/yargs-parser": "^21.0.0",
    "@typescript-eslint/utils": "^8.52.0",
    "@verdaccio/types": "^10.8.0",
    "@vuepress/bundler-vite": "^2.0.0-rc.18",
    "@vuepress/plugin-markdown-chart": "^2.0.0-rc.109",
    "@vuepress/plugin-search": "^2.0.0-rc.61",
    "@vuepress/theme-default": "^2.0.0-rc",
    "cross-env": "^10.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "get-port": "^5.0.0",
    "globals": "^17.0.0",
    "husky": "^9.0.0",
    "jest": "^30.0.0",
    "lint-staged": "^16.0.0",
    "mermaid": "^11.4.0",
    "normalized-tmpdir": "^1.0.1",
    "prettier": "~3.7.4",
    "sass-embedded": "^1.81.0",
    "strip-ansi": "^6.0.1",
    "tmp": "^0.2.1",
    "ts-jest": "^29.4.0",
    "tsutils": "^3.21.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.52.0",
    "verdaccio": "^6.0.0",
    "verdaccio-auth-memory": "^10.2.0",
    "verdaccio-memory": "^10.3.0",
    "vuepress": "^2.0.0-rc"
  },
  "resolutions": {
    "@types/node@npm:*": "^20.0.0",
    "js-yaml@npm:4.1.0": "^4.1.0",
    "validator@npm:13.11.0": "^13.11.0"
  },
  "rationale": {
    "resolutions": {
      "js-yaml@npm:4.1.0": "Unpin verdaccio's js-yaml due to security issue",
      "validator@npm:13.11.0": "Unpin verdaccio's validator due to security issue"
    }
  },
  "packageManager": "yarn@4.12.0"
}
